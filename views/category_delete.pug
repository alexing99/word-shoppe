extends layout 

block content
   h1 #{category.name}

  
    if word_list.length 

        p #[strong Delete the following words before attempting to delete this category.]
        div(style='margin-left:20px;margin-top:20px')
        h4 Words
        dl
            each word in word_list
                dt
                    a(href=word.url) #{word.name}

    else
        p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete